  <BsButton @type="warning" @outline={{true}} @onClick={{this.submit}}>Warning</BsButton>
  <BsButton @type="info" @outline={{true}} @onClick={{this.submit}}>Info</BsButton>
  <BsButton @type="light" @outline={{true}} @onClick={{this.submit}}>Light</BsButton>
  <BsButton @type="dark" @outline={{true}} @onClick={{this.submit}}>Dark</BsButton>
  <BsButton disabled={{true}} @outline={{true}} @onClick={{this.submit}}>Disabled</BsButton>
</p>

