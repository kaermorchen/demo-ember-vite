{{! @glint-nocheck: addons/ember-bootstrap need to define proper types }}

<BsNavbar
  @type="light"
  @backgroundColor="light"
  as |navbar|
>
  <LinkTo @route="main" class="navbar-brand">Brand</LinkTo>
  <navbar.toggle/>
  <navbar.content>
    <navbar.nav as |nav|>
      <nav.item>
        <nav.link-to @route="bootstrap">Home</nav.link-to>
      </nav.item>
      <nav.item>
        <nav.link-to @route="about">About</nav.link-to>
      </nav.item>
      <nav.dropdown as |dd|>
        <dd.toggle>Dropdown <span class="caret"></span></dd.toggle>
        <dd.menu as |ddm|>
          <ddm.item>
            <ddm.link-to @route="main">Main</ddm.link-to>
          </ddm.item>
          <ddm.item>
            <ddm.link-to @route="not-found" @model="42">Navbars</ddm.link-to>
          </ddm.item>
        </dd.menu>
      </nav.dropdown>
    </navbar.nav>
  </navbar.content>
</BsNavbar>

<p>Solid buttons</p>
<p>
  <BsButton @type="primary" @onClick={{this.submit}}>Primary</BsButton>
  <BsButton @type="secondary" @onClick={{this.submit}}>Secondary</BsButton>
  <BsButton @type="success" @onClick={{this.submit}}>Success</BsButton>
  <BsButton @type="danger" @onClick={{this.submit}}>Danger</BsButton>
  <BsButton @type="warning" @onClick={{this.submit}}>Warning</BsButton>
  <BsButton @type="info" @onClick={{this.submit}}>Info</BsButton>
  <BsButton @type="light" @onClick={{this.submit}}>Light</BsButton>
  <BsButton @type="dark" @onClick={{this.submit}}>Dark</BsButton>
  <BsButton disabled={{true}} @onClick={{this.submit}}>Disabled</BsButton>
</p>
